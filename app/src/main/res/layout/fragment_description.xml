<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/object_root">

    <TextView
            android:id="@+id/description_textview1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/description_imageview"
            app:layout_constraintBottom_toTopOf="@id/description_textview2"
            android:textSize="70sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/description_imageview"/>
    <TextView
            android:id="@+id/description_textview2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="35sp"
            app:layout_constraintTop_toBottomOf="@+id/description_textview1"
            app:layout_constraintEnd_toEndOf="@+id/description_textview1"
            app:layout_constraintStart_toStartOf="@+id/description_textview1"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="70dp"/>
    <ImageView
            android:id="@+id/description_imageview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/face_happy"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/description_textview1"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="40dp"/>
</android.support.constraint.ConstraintLayout>